        "revealProblems": "onProblem",
        "close": true
      }
    },
    {
      "label": "update",
      "type": "shell",
      "command": "pnpm update --latest",
      "problemMatcher": [],
      "presentation": {
        "revealProblems": "onProblem",
        "close": true
      }
    },
    {
      "type": "npm",
      "script": "prepack",
      "problemMatcher": [],
      "presentation": {
        "revealProblems": "onProblem",
        "close": true
      }
    },
    {
      "type": "npm",
      "script": "dev",
      "problemMatcher": [],
      "presentation": {
        "revealProblems": "onProblem",
        "close": true
      }
    },
    {
      "label": "pack-local",
      "type": "shell",
      "command": "pnpm prepack && rm -f ~/nuxt-svg-transformer-*.tgz || true && npm pack && mv nuxt-svg-transformer-*.tgz ~/",
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "revealProblems": "never",
        "close": true
      }
    },
    {
      "label": "pre-deploy",
      "type": "shell",
      "command": "git checkout main && git merge develop && git push && git checkout develop",
      "problemMatcher": [],
      "presentation": {
        "revealProblems": "onProblem",
        "close": true
      }
    }
  ]
